<div class="mt-4">
    <div class="row">
        {{#each docs}}
        <div class="col-lg-4">
            <div class="card">
                <a href="/products/{{this.slug}}"><img class="card-img-top" src="{{this.image}}" alt="{{this.image}}"></a>
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="card-text">{{this.price}}VND</p>
                        <a href="#" class="btn btn-primary">Buy</a>
                    </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>